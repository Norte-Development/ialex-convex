# IALEX Docker Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CONVEX CONFIGURATION (External Service)
# =============================================================================
VITE_CONVEX_URL=https://your-convex-deployment-url

# =============================================================================
# QDRANT CONFIGURATION (External Service)
# =============================================================================
QDRANT_URL=https://your-qdrant-instance-url
QDRANT_API_KEY=your-qdrant-api-key

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
MISTRAL_API_KEY=your-mistral-api-key
DEEPGRAM_API_KEY=your-deepgram-api-key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
HMAC_SECRET=your-secure-hmac-secret-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
WORKER_CONCURRENCY=2
